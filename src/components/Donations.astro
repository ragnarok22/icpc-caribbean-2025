---
import { getSponsors } from "@/lib/api";

const response = await getSponsors({ page_size: 100 });
const sponsors = response.error ? [] : response.data;

const usdFormatter = new Intl.NumberFormat("es-ES", {
  style: "currency",
  currency: "USD",
  maximumFractionDigits: 0,
});

const totalAmount = sponsors.reduce(
  (sum, sponsor) =>
    sum +
    (Number.isFinite(sponsor.amount_donated) ? sponsor.amount_donated : 0),
  0,
);

const totalsByCategory = sponsors.reduce((acc, sponsor) => {
  const category = sponsor.category?.trim() || "Otras vías";
  const currentAmount = acc.get(category) ?? 0;
  const amount = Number.isFinite(sponsor.amount_donated)
    ? sponsor.amount_donated
    : 0;

  acc.set(category, currentAmount + amount);
  return acc;
}, new Map<string, number>());

const categoryBreakdown = Array.from(totalsByCategory.entries())
  .map(([category, amount]) => ({
    category,
    amount,
    formattedAmount: usdFormatter.format(amount),
  }))
  .sort((a, b) => b.amount - a.amount);

const formattedTotal = usdFormatter.format(totalAmount);
